<Placement>
  <!-- Initializing all shapes for Package-->
  <Match ContentType="Package">
    <Place Parts_Package_PackageVersions="-"
           Parts_Tags_ShowTags="-"
           Parts_Common_Body_Summary="-"
           Parts_Common_Body="-"
           Parts_Common_Metadata="-"/>
  </Match>
  
  <Match ContentType="Package" DisplayType="Summary">
    <Place Parts_Tags_ShowTags="Tags"/>
  </Match>

  <Match ContentType="Package" DisplayType="Detail">
    <Place Parts_Tags_ShowTags="Tags"/>
    <Place Parts_Package_PackageVersions="PackageVersions"/>
    <Place Parts_Common_Body="Body" />
  </Match>
  <Match ContentType="PackageVersion" DisplayType="Detail">
    <Place Parts_Common_Body="Body" />
  </Match>

</Placement>
